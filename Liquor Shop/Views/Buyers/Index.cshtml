@model IEnumerable<Liquor_Shop.Models.Buyer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<img src="~/bp.jpg" height="550" width="1150"/>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyer_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buyer_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buyer_Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer_Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller_ID.Seller_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
